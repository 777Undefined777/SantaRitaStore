<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Intento" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#44000000</item> <!-- Agrega transparencia y difuminado a la barra de estado -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Intento.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Intento.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Intento.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo para botones redondeados -->
    <style name="RoundedButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Este valor controla el grado de redondeo, puedes ajustarlo segÃºn sea necesario -->
    </style>
</resources>
