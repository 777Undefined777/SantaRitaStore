<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/bg_blurred"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="697dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="235dp"
                android:layout_height="114dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:src="@drawable/cannpng"
                android:text="Welcome Back"
                android:textColor="#171717" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/iconocannabis" />

            <EditText
                android:id="@+id/login_name_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:background="#E7EAE9"
                android:hint="Ingresa tu nombre"
                android:inputType="text"
                android:maxLength="20"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/login_phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:background="#E7EAE9"
                android:hint="Ingresa tu numero de telefono aqui"
                android:inputType="number"
                android:maxLength="9"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:background="#E7EAE9"
                android:hint="Ingresa tu contraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="50dp"
                android:background="#4CAF50"
                android:gravity="center"
                android:padding="20dp"
                android:text="Entrar"
                android:textColor="@color/black"
                android:textSize="15.4sp" />




        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
